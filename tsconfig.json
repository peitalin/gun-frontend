{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "target": "es6",
    "lib": ["es2018", "dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
        // "~/*": ["*"],
        "components/*": ["components/*"],
        "layout/*": ["layout/*"],
        "pages/*": ["pages/*"],
        "reduxStore/*": ["reduxStore/*"],
        "queries/*": ["queries/*"],
        "typings/*": ["typings/*"],
        "utils/*": ["utils/*"]
    },
    "plugins": [
        { "transform": "ts-optchain/transform" },
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
